<header class='top-page-header'>
  <div class="title">
    <%= link_to "title", root_path, class:"title-icon"  %>
  </div>
  <div class="list">
    <% if user_signed_in? %>
       <li><%= link_to current_user.nickname, keyword_path(keyword.id), class:"user-nickname" %></li>
       <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "logout" %></li>
       <li><%= link_to "投稿する", new_keyword_path, class: "fill-in" %></li>
    <% else %>
      <li><%= link_to "ログイン", new_user_session_path, class:"login" %></li>
      <li><%= link_to "新規登録", new_user_registration_path, class: "sign-up" %></li>
    <% end %>
  </div>
</header>