<%= form_with model: @user, url: user_session_path, class: 'session-main', local: true do |f| %>
  <div class="session-form">
  <h2>ログイン画面</h2>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <div class="field">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
    </div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-form" %>
  </div>

  <div class="field">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
    </div>
    <%= f.password_field :password, autocomplete: "current-password", class: "input-form" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class: "login-btn" %>
    <div>
      <%= link_to "トップページに戻る", root_path, class: "back-top" %>
    </div>
  </div>
</div>
<% end %>
<%#= render "devise/shared/links" %>
