<%# header %>
<%= render "shared/header" %>

<div class="mypage">
  <div class="show-form">
    <div class="user-name">
      <%= "#{@nickname}さんの単語リスト" %>
    </div>
    
    <table>
    <tr>
    <th>キーワード</th>
    <th>ジャンル</th>
    <th>説明文</th>
    <th>音声</th>
    <th>達成度</th>
    </tr>
    <% @keywords.each do |keyword| %>
    <tr>
      <td class="form-word"><%= keyword.word %></td>
      <td class="form-genre"><%= keyword.genre.name %></td>
      <td class="form-instruction">
        <div class="highlight">
          <%= markdown(keyword.instruction) %>
        </div>  
      </td>
      <td>#</td>
    <% if current_user.tested_by?(keyword.id) %>
    <div class="check-btn">
      <td>
        <%= link_to 'いいね', keyword_test_path(keyword.id), method: :delete %>
      </td>
    <% else %>
      <td>
        <%= link_to '良くない', keyword_tests_path(keyword.id), method: :post %>
      </td>
    <% end %>
    </tr>
    <% end %>
    </table>  
    
  </div>
</div>