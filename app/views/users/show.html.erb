<%# header %>
<%= render "shared/header" %>

<div class="mypage">
  <div class="show-form">
    <div class="user-name">
      <%= "#{@nickname}さんの単語リスト" %>
    </div>
    
    <table>
    <tr>
    <th>キーワード</th>
    <th>ジャンル</th>
    <th>説明文</th>
    <th>音声</th>
    <th>達成度</th>
    </tr>
    <% @keywords.each do |keyword| %>
    <tr>
    <td class="form-word"><%= keyword.word %></td>
    <td class="form-genre"><%= keyword.genre.name %></td>
    <td class="form-instruction">
      <div class="highlight">
          <%= markdown(keyword.instruction) %>
      </div>  
    </td>
    <td>#</td>
    <td class="star-btn">
      <i class="fas fa-exclamation-circle exclamation-btn" id="exclamation"></i>
      <i class="fas fa-check-circle check-btn" id="check"></i>
    </td>
    </tr>
    <% end %>
    </table>  
    
  </div>
</div>